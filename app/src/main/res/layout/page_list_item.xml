<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/page_item_padding"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/page_item_img"
        android:layout_width="@dimen/page_item_img_size"
        android:layout_height="@dimen/page_item_img_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>
    
    <TextView
        android:id="@+id/page_item_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/page_item_img"/>
    
    <ProgressBar
        android:id="@+id/page_item_progress"
        android:layout_width="@dimen/page_item_progress_size"
        android:layout_height="@dimen/page_item_progress_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>