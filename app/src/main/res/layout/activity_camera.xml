<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.jajac.pocketsummary.CameraActivity">

    <io.fotoapparat.view.CameraView
        android:id="@+id/activity_camera_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_camera_back_btn"
        android:layout_width="@dimen/fab_small_size"
        android:layout_height="@dimen/fab_small_size"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|start"
        app:backgroundTint="@color/colorPrimary"
        app:borderWidth="0dp"
        android:elevation="6dp"
        android:tint="@android:color/white"
        android:clickable="true"
        android:src="@drawable/ic_arrow_back_24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_camera_capture_btn"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ic_camera_24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_camera_finish_btn"
        android:layout_width="@dimen/fab_small_size"
        android:layout_height="@dimen/fab_small_size"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/colorPrimary"
        app:borderWidth="0dp"
        android:elevation="6dp"
        android:tint="@android:color/white"
        android:clickable="true"
        android:src="@drawable/ic_check_24dp"/>

</FrameLayout>
